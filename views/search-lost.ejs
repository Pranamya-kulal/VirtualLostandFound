<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Lost Items</title>
    <style>
        /* Global Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body Styling */
        body {
            font-family: 'Arial', sans-serif;
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                        url('https://t4.ftcdn.net/jpg/08/97/11/03/240_F_897110304_UzSVoLcNBrra1cwdh9dK5Ma8pSw5Qope.jpg') no-repeat center center fixed;
            background-size: cover;
            color: white;
            padding: 20px;
            overflow-y: auto;
        }

        /* Main Container */
        .container {
            width: 100%;
            max-width: 1100px;
            margin: 0 auto;
        }

        h1 {
            font-size: 2.5rem;
            color: #2980B9; /* Blue color for header */
            margin-bottom: 20px;
            font-weight: bold;
            text-align: center;
        }

        /* Search Form */
        form {
            margin-bottom: 30px;
            text-align: center;
            position: relative;
        }

        input[type="text"] {
            width: 80%;
            max-width: 600px;
            padding: 12px;
            border: 1px solid #BDC3C7;
            border-radius: 8px;
            font-size: 1rem;
        }

        input[type="text"]:focus {
            border-color: #3498DB;
            outline: none;
            background-color: #EAF2F8; /* Light blue focus */
        }

        button {
            background-color: #2ECC71;
            color: white;
            padding: 12px 20px;
            margin-left: 10px;
            border: none;
            border-radius: 8px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #27AE60;
        }

        .loading-spinner {
            display: none;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 4px solid rgba(0, 0, 0, 0.1);
            border-radius: 50%;
            border-top: 4px solid #3498DB;
            width: 30px;
            height: 30px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* Results Section */
        .results-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .item-container {
            background-color: white;
            color: black;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 15px;
        }

        .item-container img {
            width: 100%;
            max-height: 200px;
            object-fit: cover;
            margin-bottom: 10px;
            border-radius: 8px;
        }

        .item-info {
            text-align: center;
        }

        .item-info strong {
            font-size: 1.2rem;
            color: #2980B9;
            display: block;
            margin-bottom: 10px;
        }

        .item-info p {
            font-size: 1rem;
            color: #555;
        }

        /* Back to Home */
        .back-to-home {
            display: flex;
            align-items: center;
            justify-content: flex-start;
            margin-bottom: 20px;
            color: white;
            text-decoration: none;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

        .back-to-home i {
            font-size: 1.5rem;
            margin-right: 8px;
        }

        .back-to-home:hover {
            color: #3498DB;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            input[type="text"] {
                width: 100%;
            }

            button {
                width: 100%;
                margin-top: 10px;
            }

            .back-to-home {
                justify-content: center;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <!-- Back to Home -->
        <a href="/home" class="back-to-home">
            <i>üè†</i> Back to Home
        </a>

        <h1>Search Lost Items</h1>

        <!-- Search Form -->
        <form id="searchForm" action="/search-lost" method="POST">
            <input type="text" name="searchQuery" placeholder="Enter item name or description" required>
            <button type="submit">Search</button>
            <div class="loading-spinner" id="spinner"></div>
        </form>

        <!-- Search Results -->
        <% if (results && results.length > 0) { %>
            <div class="results-container">
                <% results.forEach(item => { %>
                    <div class="item-container">
                        <img src="<%= item.image_path %>" alt="<%= item.item_name %>">
                        <div class="item-info">
                            <strong><%= item.item_name %></strong>
                            <p><%= item.description %></p>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else if (results && results.length === 0) { %>
            <p style="text-align: center; color: white;">No items found matching your search.</p>
        <% } %>
    </div>

    <script>
        const form = document.getElementById('searchForm');
        const spinner = document.getElementById('spinner');

        form.addEventListener('submit', () => {
            spinner.style.display = 'block';
        });
    </script>

</body>
</html>
